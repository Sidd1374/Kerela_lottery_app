<!-- res/layout/lottery_list_item.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:padding="10dp"
    android:background="@color/green2"
    >

    <ImageView
        android:id="@+id/lotteryImage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lotteryPrize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="$500"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lotteryImage"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/lotteryImage"
        app:layout_constraintTop_toBottomOf="@+id/lotteryImage" />

    <Button
        android:id="@+id/button70"
        android:layout_width="122dp"
        android:layout_height="48dp"
        android:padding="5dp"
        android:backgroundTint="@color/yellow"
        android:text="@string/add_to_cart"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lotteryPrize"
        app:layout_constraintStart_toStartOf="@+id/lotteryPrize"
        app:layout_constraintTop_toBottomOf="@+id/lotteryPrize" />

    <Button
        android:id="@+id/buyNow"
        android:layout_width="122dp"
        android:layout_height="48dp"
        android:padding="10dp"
        android:backgroundTint="@color/yellow"
        android:text="@string/buy_now"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button70"
        app:layout_constraintStart_toStartOf="@+id/button70"
        app:layout_constraintTop_toBottomOf="@+id/button70" />

</androidx.constraintlayout.widget.ConstraintLayout>